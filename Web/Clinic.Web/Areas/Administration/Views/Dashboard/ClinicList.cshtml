﻿@using Clinic.Web.ViewModels.Administration.Dashboard.Clinic;

@model ICollection<ClinicViewModel>

<main class="mt-3">
    @if (Model.Count == 0)
    {
        <h1 class="text-center suls-text-color">There are no clinics at the moment!</h1>
    }
    else
    {
        <h1 class="text-center suls-text-color">Current Clinics</h1>
        @foreach (ClinicViewModel clinic in Model)
        {
            <div>
                <p>Clinic Name - @clinic.Name</p>
                @if (clinic.Doctors.Count > 0)
                {
                    <div>
                        <h3>Doctors in this clinic: </h3>
                        @foreach (DoctorDTO doctor in clinic.Doctors)
                        {
                            <p>@doctor.Name</p>
                            <div>
                                <a href="/Administration/Dashboard/RemoveDoctorFromClinic?doctorId=@doctor.DoctorId" class="btn forum-go-back-btn text-uppercase">Remove @doctor.Name from this clinic</a>
                            </div>
                        }
                    </div>
                }
                <div>
                    <a href="/Administration/Dashboard/AddDoctorToClinic?clinicId=@clinic.ClinicId" class="btn forum-go-back-btn text-uppercase">Add a doctor to @clinic.Name</a>
                </div>
                <div>
                    <a href="/Administration/Dashboard/RemoveClinic?clinicId=@clinic.ClinicId" class="btn forum-go-back-btn text-uppercase">Remove Clinic</a>
                </div>
                <div>
                    <a href="/Administration/Dashboard/EditClinic?clinicId=@clinic.ClinicId" class="btn forum-go-back-btn text-uppercase">Edit Clinic</a>
                </div>
            </div>
        }
    }
    
</main>